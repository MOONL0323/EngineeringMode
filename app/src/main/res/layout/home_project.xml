<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/test_size"
        android:text="@string/title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_camera"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_camera"
            />

        <!-- Repeat for the other 7 buttons with the same margin -->
        <Button
            android:id="@+id/button_touch_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_touch_screen"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/button_screen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_screen"
             />

        <Button
            android:id="@+id/button_gnss"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_gnss"
           />

        <Button
            android:id="@+id/button_gyroscope"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_gyroscope"
            />

        <Button
            android:id="@+id/button_temperature"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_temperature"
            />

        <Button
            android:id="@+id/button_sim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_sim"
            />

        <Button
            android:id="@+id/button_version_info"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:textSize="@dimen/test_size"
            android:text="@string/button_version_info"
            />


    </GridLayout>

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/test_size"
        android:text="@string/button_back"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/test_size"
        android:text="@string/button_start"

        app:layout_constraintEnd_toStartOf="@id/button_back"
        app:layout_constraintTop_toTopOf="@id/title"
        android:layout_marginEnd="8dp" />


</androidx.constraintlayout.widget.ConstraintLayout>